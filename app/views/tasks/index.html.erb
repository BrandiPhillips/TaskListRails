<%= render partial: "shared/header" %>

<div class="section" >
<div class='row'>
  <% if @tasks == [] || @tasks == nil %>
    <div class='small-6 medium-10 large-12 column center'>
      <h3>You have not yet created any tasks.</h3>
    <div class='small-6 medium-10 large-12 column center'>
      <h3>
      <%= link_to "Create A Task", new_path %>
      </h3>
    </div>

  <% else %>

  <article>
    <% @tasks.each do |task| %>
        <div class='small-6 medium-2'>
          <h3> <%= link_to task.title, show_path(task.id) %> </h3>
        </div>
        <div class='small-6 medium-3'>
          <h4> Type: <%= task.description %> </h4>
          <p>
            <%= task.details %>
          </p>
        </div>
        <div class='small-6 medium-3'>
          <p>
            Completion Status: <%= task.completion_status %>
          </p>
          <p>
            <%= task.completion_date %>
          </p>
        </div>
        <div class='small-6 medium-4'>
          <ul>
            <li>
               <%= button_to "Delete Task", {action: "destroy", id: task.id}, method: :delete, data: {confirm: "Are you sure you want to delete this task?" }%>
            </li>
            <li>
               <%= button_to "Complete Task", mark_complete_path(task.id), {:method => :patch}%>
            </li>
            <li>
              <%= button_to "Edit Task", edit_path(task.id), {:method => :get} %>
            </li>
          </ul>
        </div>

    </article>
    <% end %>
  <% end %>
</div>
</div>
